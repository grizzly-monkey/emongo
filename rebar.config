{erl_opts, [debug_info, {src_dirs, ["src", "test"]}]}.

{port_env, [{"DRV_CFLAGS", "--std=c++11 $DRV_CFLAGS -I./priv/include/mongocxx/v_noabi  -I./priv/include/bsoncxx/v_noabi "},
  {"DRV_LDFLAGS", "$DRV_LDFLAGS  -Wl,-rpath,/opt/emongo/priv/lib    -L./priv/lib -lmongocxx -lbsoncxx"}]}.

{port_specs, [
  {"priv/emongo.so", ["c_src/*.cpp"]}
]}.

{deps, [
  {poolboy, ".*", {git, "https://github.com/devinus/poolboy", {tag, "1.5.2"}}}
]}.
